<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book an appointment',
        href: 'tel:+16147414001',
        target: '_blank',
        icon: 'tabler:phone',
      },
      { text: 'Our services', href: '/services' },
    ]}
    image={{ src: '~/assets/images/marathon.jpg', alt: 'Marathon Runners' }}
