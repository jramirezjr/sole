      {
        title: 'Posterior Tibial Tendon Dysfunction',
        icon: 'tabler:circle-x',
        description: 'Effective management of fallen arches and tendon-related pain.',
      },
      {
        title: 'Skin & Nail Treatments',
        icon: 'tabler:hand-sanitizer',
        description: 'Comprehensive care for nail fungus, dry skin, and other dermatological foot concerns.',
      },
      {
        title: 'Surgical Interventions',
        icon: 'tabler:face-mask',
        description: 'Advanced surgical solutions for foot and ankle conditions requiring correction.',
      },
      {
        title: 'Sports Injuries',
        icon: 'tabler:soccer-field',
        description: 'Expert care for foot and ankle injuries to help athletes recover quickly and safely.',
      },
      {
        title: 'Tendonitis',
        icon: 'tabler:wave-sine',
        description: 'Treatment for tendon inflammation and overuse injuries to restore mobility.',
      },
      {
        title: 'Warts',
        icon: 'tabler:virus',
        description: 'Effective removal of plantar warts to relieve discomfort and prevent recurrence.',
      },
      {
        title: 'Wound Care',
        icon: 'tabler:first-aid-kit',
