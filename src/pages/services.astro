---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Comprehensive Foot & Ankle Care, Tailored for You"
    subtitle="From sports injuries to surgical solutions, we provide expert podiatric care to keep you moving comfortably and pain-free."
    image={{
      src: '~/assets/images/athlete.jpg',
      alt: 'Athelete Image',
    }}
  />

  <Content
  isAfterContent
  items={[
    {
      title: 'Comprehensive Foot & Ankle Care',
      description: 'We provide advanced conservative and surgical treatments for a wide range of foot and ankle conditions, including heel pain, plantar fasciitis, neuromas, bunions, hammer toes, fungal nails, athlete\'s foot, warts, ingrown nails, flat feet, corns, calluses, and more. Our goal is to restore function, relieve pain, and keep you moving comfortably.',
      icon: 'tabler:clock',
    },
    {
      title: 'Expert Care for Sports Injuries',
      description: 'From minor sprains and shin splints to fractures and tendon injuries, we offer expert diagnosis, treatment, and rehabilitation for foot and ankle injuries. Whether you\'re an athlete or simply on the go, our personalized care plans help you heal effectively and regain mobility.',
      icon: 'tabler:ball-american-football',
    },
    {
      title: 'Preventive & Specialized Foot Health Management',
      description:
        'Benefit from cost savings by avoiding the need for custom design work, as our templates offer professional-grade designs at a fraction of the cost.',
      icon: 'tabler:heart-rate-monitor',
    },
  ]}
  image={{
    src: '~/assets/images/treadmill.jpg',
    alt: 'Features Image',
  }}
>
  <Fragment slot="content">
    <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Offering Advanced Foot & Ankle Solutions for Lasting Relief</h3>
  </Fragment>
</Content>

